<resources>
    <style name="AppTheme.LoadingDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/theme_purple_500</item>
    </style>
</resources>