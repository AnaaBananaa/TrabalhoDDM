<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_wrong="false">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/veggie_corner_radius"/>
            <stroke android:color="#EBEBEB" android:width="0.5dp"/>
        </shape>
    </item>
    <item app:state_wrong="true">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/veggie_corner_radius"/>
            <stroke android:color="@color/theme_red_wrong" android:width="0.5dp"/>
        </shape>
    </item>
</selector>