<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.AppActivity">

    <FrameLayout
        android:id="@+id/app_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/app_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bottom_nav_menu"
        android:elevation="@dimen/cardview_default_elevation"
        app:itemRippleColor="@color/white"
        app:itemIconTint="@color/icons_bottom_nav_menu_color"
        app:itemTextColor="@color/title_bottom_nav_menu_color"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>